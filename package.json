{
  "name": "anna",
  "version": "0.0.0-development",
  "description": "",
  "targets": {
    "webext-dev": {
      "distDir": "./dist",
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {
      "distDir": "./dist"
    }
  },
  "scripts": {
    "start": "parcel src/manifest.json --target webext-dev",
    "start:firefox": "web-ext run --source-dir dist",
    "build": "parcel build src/manifest.json --target webext-prod --no-source-maps",
    "type:check": "tsc --noEmit",
    "test": "jest --watch",
    "coverage": "jest --coverage --ci --silent",
    "format": "prettier --write \"src/**/*.{ts,tsx,js}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx,js}\"",
    "pre-commit": "lint-staged",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@parcel/config-webextension": "^2.0.1",
    "@parcel/transformer-image": "^2.0.0-rc.0",
    "parcel": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2",
    "web-ext": "^7.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/firefox-webext-browser": "^111.0.3",
    "@types/jest": "^29.5.6",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "husky": "^8.0.3",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.0.2",
    "msw": "^1.3.2",
    "prettier": "^3.0.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "prettier --write"
  }
}
