{
  "name": "anna",
  "version": "1.1.0",
  "description": "",
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  },
  "scripts": {
    "start": "parcel src/manifest.json --target webext-dev",
    "start:firefox": "web-ext run --source-dir dist",
    "build": "parcel build src/manifest.json --target webext-prod",
    "type:check": "tsc --noEmit",
    "test": "jest --watch",
    "coverage": "jest --coverage --ci --silent",
    "format": "prettier --write \"src/**/*.{ts,tsx,js}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx,js}\"",
    "release": "web-ext sign --source-dir dist/webext-prod --api-key $WEB_EXT_API_KEY --api-secret $WEB_EXT_API_SECRET"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@parcel/config-webextension": "^2.0.0-rc.0",
    "@parcel/transformer-image": "^2.0.0-rc.0",
    "babel-loader": "^8.2.2",
    "parcel": "^2.0.0-rc.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "typescript": "^4.4.2",
    "web-ext": "^6.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/firefox-webext-browser": "^82.0.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "husky": "^4.3.0",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^27.0.1",
    "msw": "^0.35.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "tailwindcss": "^2.2.9"
  }
}
