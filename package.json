{
  "name": "anna",
  "version": "0.0.0-development",
  "description": "",
  "targets": {
    "webext-dev": {
      "distDir": "./dist",
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {
      "distDir": "./dist"
    }
  },
  "scripts": {
    "start": "parcel src/manifest.json --target webext-dev",
    "start:firefox": "web-ext run --source-dir dist",
    "build": "parcel build src/manifest.json --target webext-prod",
    "type:check": "tsc --noEmit",
    "test": "jest --watch",
    "coverage": "jest --coverage --ci --silent",
    "format": "prettier --write \"src/**/*.{ts,tsx,js}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx,js}\"",
    "pre-commit": "pretty-quick --staged",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@parcel/config-webextension": "^2.0.1",
    "@parcel/transformer-image": "^2.0.0-rc.0",
    "parcel": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^3.0.1",
    "typescript": "^4.4.2",
    "web-ext": "^6.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/firefox-webext-browser": "^94.0.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "husky": "^7.0.4",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^27.0.1",
    "msw": "^0.36.3",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1"
  }
}
